<div class="row">
  <div class="col s12">
    <h3 class = "center-align">Log in</h3>
  </div>
</div>
<div class="container">
  <div class="row center">
    <div class="col s12 m12">
      <div class="card-panel">
        <div class="row">
          <%= form_for(:logins, html: {class: "col s12"}) do |f| %>      

            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, placeholder: "Enter your email" %>
                <%= f.label :email, class: "active"%>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <%= f.password_field :password, placeholder: "Enter your password" %>
                <%= f.label :password, class: "active"%>
              </div>
            </div>

            <div class="row">
            <div class="input-field col s12">
              <%= f.button '<i class="material-icons left">arrow_forward</i>Log in'.html_safe, class: "btn blue waves-effect waves-light" %>
            </div>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>