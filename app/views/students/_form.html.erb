<%= render 'shared/errors', obj: @student %>

<div class="row">
  <div class="col s12">
    <h3 class = "center-align"><%= @student.new_record? ? "Sign up!" : "Edit your profile" %></h3>
  </div>
</div>
<div class="container">
  <div class="row center">
    <div class="col s12 m12">
      <div class="card-panel">
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :name, placeholder: "Enter your full name" %>
                <%= f.label :name, class: "active"%>
              </div>
            </div>
            
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, placeholder: "Enter your email" %>
                <%= f.label :email, class: "active"%>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <%= f.password_field :password, placeholder: "Choose a password" %>
                <%= f.label :password, class: "active"%>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">security</i>
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
                <%= f.label :password_confirmation, class: "active"%>
              </div>
            </div>

            <div class="row">
            <div class="input-field col s12">
              <%= f.button(@student.new_record? ? '<i class="material-icons left">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons left">arrow_forward</i>Submit updates'.html_safe, class: "btn blue waves-effect waves-light") %>
            </div>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>