<%= render 'shared/errors', obj: @student %>

<div class="row">
  <div class="col s12">
    <h3 class = "center-align"><%= @student.new_record? ? "Sign up!" : "Edit your profile" %></h3>
  </div>
</div>
<div class="container">
  <div class="row center">
    <div class="col s12 m12">
      <div class="card-panel">
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :name, placeholder: "Enter your full name" %>
                
              </div>
            </div>
            
            <div class="row">
              <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
            <%= f.email_field :email, placeholder: "Enter your email" %>
            
              </div>
            </div>

            <div class="row">
            <div class="input-field col s12">
              <%= f.submit(@student.new_record? ? "Sign up" : "Sumbit updates", class: "btn blue waves-effect waves-light") %>
            </div>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>